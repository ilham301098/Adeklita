<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trydev.games.guesswhat">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CategoryActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FinalActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="Adek Lita" />
        <activity
            android:name=".MenuBalitaActivity"
            android:label="Adek Lita" />
        <activity
            android:name=".ArticleActivity"
            android:label="Article Adek Lita" />
        <activity
            android:name=".HitungActivity"
            android:label="Hitung Berat Badan Ideal"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".HasilActivity"
            android:label="Hasil BMI"
            android:launchMode="singleTask"
            android:parentActivityName=".HitungActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HitungActivity" />
        </activity>

        <service
            android:name=".Service.MediaService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Activitylistdata"></activity>
    </application>

</manifest>