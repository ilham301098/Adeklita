<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trydev.games.guesswhat.MenuBalitaActivity"
    android:background="@drawable/background"
    android:paddingBottom="16dp"
    >

    <ImageView
        android:id="@+id/banana"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/banana_title"
        style="@style/fruit_title"
        />
    <ImageView
        android:id="@+id/cherry"
        android:layout_toStartOf="@id/banana"
        style="@style/fruit_title"
        android:src="@drawable/cherry_correct"
        android:layout_marginTop="85dp"
        />
    <ImageView
        style="@style/fruit_title"
        android:src="@drawable/grape_correct"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-35dp"
        android:rotation="70"
        android:layout_marginRight="-20dp"
        />

    <ImageView
        style="@style/fruit_title"
        android:src="@drawable/orange_correct"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="-15dp"
        />
    <ImageView
        android:id="@+id/panda"
        style="@style/fruit_title"
        android:src="@drawable/panda"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_toEndOf="@id/panda"
        style="@style/fruit_title"
        android:src="@drawable/cow"
        />
    <ImageView
        android:layout_toStartOf="@id/panda"
        style="@style/fruit_title"
        android:src="@drawable/bear"
        />

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/alita" />

    <ImageButton
        android:id="@+id/start"
        style="@style/Buttons"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-127dp"
        android:src="@drawable/mulai_button_en" />
    <ImageButton
        android:id="@+id/instruction"
        style="@style/Buttons"
        android:layout_below="@id/start"
        android:src="@drawable/petunjuk_button_en"
        />
    <ImageButton
        android:id="@+id/exit"
        style="@style/Buttons"
        android:layout_below="@id/instruction"
        android:src="@drawable/keluar_button_en"
        />

</RelativeLayout>
